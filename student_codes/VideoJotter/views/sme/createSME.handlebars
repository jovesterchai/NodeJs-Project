<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card card-body">
            <h3 class="text-center">Account Register (Business)</h3>
            <form action="/sme/createSME" method="post">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" name="name" value="{{user.org_name}}" required>
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" name="email" class="form-control" value="" >
                </div>
                <div class="form-group">
                    <label for="phoneno">Phone Number</label>
                    <input type="text" name="phoneno" class="form-control" value="{{user.org_phone}}">
                </div>
                <div class="form-group">
                    <label for="website">Website</label>
                    <input type="website" name="website" class="form-control" value="{{user.org_website}}">
                </div>
                <div class="form-group">
                    <label for="address">Address</label>
                    <input type="text" name="address" class="form-control" value="{{user.org_address}}" required>
                </div>
                <div class="form-group">
                    <label for="category">Category</label>
                    <select name="category" class="form-control" value="" required>
                        <option value="art">Arts & Craft</option>
                        <option value="hardware">Hardware/DIY</option>
                        <option value="massage">Massage</option>
                        <option value="tailor">Tailor Service</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="operating_hours">Operating Hours</label>
                    <input type="text" name="operating_hours" class="form-control" value="" required>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>